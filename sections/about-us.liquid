{% schema %}
{
  "name": "About Us",
  "tag": "section",
  "class": "section-about-us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "من نحن؟"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Description",
      "default": "مرحبًا بكم في متجرنا! نحن نقدم أفضل المنتجات بأعلى جودة وبأسعار مناسبة."
    }
  ],
  "presets": [
    {
      "name": "About Us Section"
    }
  ]
}
{% endschema %}

<div class="about-us-container page-width">
  <h2 class="about-us-title">{{ section.settings.title }}</h2>
  <p class="about-us-content">{{ section.settings.content }}</p>
</div>

<style>
  .section-about-us {
    padding: 40px 0;
    text-align: center;
    background-color: #f8f8f8;
  }

  .about-us-title {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .about-us-content {
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
</style>
